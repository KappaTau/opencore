. /etc/ravencore.conf || exit 1

domain_name=$1
mail_name=$2

# make sure we have both of our arguments

if [ -z "$domain_name" ] || [ -z "$mail_name" ]; then

    echo "You must supply a domain name and mail name"

    exit 1

fi

# remove the user and its files from the filesystem

rm -rf $VMAIL_ROOT/$domain_name/$mail_name

# remove the user from the sasl database

/usr/sbin/saslpasswd2 -d -p -u $domain_name $mail_name

