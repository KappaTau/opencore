if [ -z "$runlevel" ]; then

# get our default runlevel
        
    runlevel=$(grep ':initdefault:' /etc/inittab | sed 's/:/ /g' | awk '{print $2}')

fi

echo "<h2>Services set to start on boot ( runlevel $runlevel "

#<select name=runlevel>"
#for i in 1 2 3 4 5; do
#    echo -n "<option value=$i"
#    [ $runlevel -eq $i ] && echo -n " selected"
#    echo ">$i</option>"
#done

#echo "</select>

echo " )</h2>"

echo "<table cellpadding=0 cellspacing=0 border=1><tr>"

chkconfig --list | grep '^[[:alpha:]]' | while read -r line; do

    i=$(echo $line | awk '{print $1}')

    echo "<tr><td width=200>$i</td>"

    status=$(echo $line | awk "{print \$$(expr $runlevel "+" 2)}" | sed 's/.*://')

    case $status in
	on)
	    new_status=off
	    running='<img src="images/solidgr.gif" border=0>'
	    start='<img src="images/start_grey.gif" border=0>'
	    stop='<a href="chkconfig.php?service='$i'&status='$new_status'"><img src="images/stop.gif" border=0></a>'
	    ;;
	off)
	    new_status=on
	    running='<img src="images/solidrd.gif" border=0>'
	    start='<a href="chkconfig.php?service='$i'&status='$new_status'"><img src="images/start.gif" border=0></a>'
	    stop='<img src="images/stop_grey.gif" border=0>'
	    ;;
    esac


    echo '<td>' $running '</td><td>' $start '</td><td>' $stop '</td></tr>'

done

echo "</table>"
