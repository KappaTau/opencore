# Where everything having to do with email is based
VMAIL_ROOT="/var/spool/virtual"

# The path to the configuration files
VMAIL_CONF_DIR="/etc/postfix"

# vmail user
VMAIL_USER="vmail"

# sasl2 stuff
SASL2_SMTPD="/usr/lib/sasl2/smtpd.conf"
SASL2_DB="/etc/sasldb2"

# Path for dovecot.conf
DOVECOT_CONF_FILE="/etc/dovecot/dovecot.conf"
